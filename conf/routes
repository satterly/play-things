# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index
# Global search
GET           /search              controllers.Application.search(q: String)

GET           /things              controllers.Things.find(q: Option[String])
GET           /things/:id          controllers.Things.show(id: Long)
POST          /things              controllers.Things.create
PUT           /things/:id          controllers.Things.update(id: Long)
DELETE        /things/:id          controllers.Things.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
